<?xml version="1.0" encoding="UTF-8"?>
<gui xmlns="uri:hui" title="Settings">
  <controller name="controller" url="settings.js"/>
  <source name="dataSource" url="settings/data"/>
  <space height="20"/>

  <box width="400" title="Settings" padding="10">
    <form name="settingsForm">
      <fields>
        <field label="Requests per second in words">
          <number-input name="wordsRequestsPerSecond" decimals="1"/>
        </field>
        <field label="Timeout before failure">
          <number-input name="wordsTimeout"/>
        </field>
      </fields>
    <buttons>
      <button text="Save" submit="true"/>
    </buttons>    
    </form>
    <buttons>
      <button text="Flush cache" name="flushCache"/>
    </buttons>
  </box>
</gui>