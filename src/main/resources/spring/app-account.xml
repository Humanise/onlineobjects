<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
    ">

	<bean id="accountController"
		class="dk.in2isoft.onlineobjects.apps.account.AccountController"
		autowire="byType" />

	<bean id="accountSettingsView"
		class="dk.in2isoft.onlineobjects.apps.account.views.AccountSettingsView"
		scope="request">
		<property name="modelService" ref="modelService" />
		<property name="memberService" ref="memberService" />
	</bean>

	<bean id="accountAgreementsView"
		class="dk.in2isoft.onlineobjects.apps.account.views.AccountAgreementsView"
		scope="request">
		<property name="memberService" ref="memberService" />
		<property name="modelService" ref="modelService" />
		<property name="securityService" ref="securityService" />
	</bean>

	<bean id="accountPasswordView"
		class="dk.in2isoft.onlineobjects.apps.account.views.AccountPasswordView"
		scope="request">
		<property name="passwordRecoveryService"
			ref="passwordRecoveryService" />
	</bean>

	<bean id="accountEmailConfirmationView"
		class="dk.in2isoft.onlineobjects.apps.account.views.AccountEmailConfirmationView"
		scope="request">
		<property name="memberService" ref="memberService" />
	</bean>

	<bean id="accountInvitationView"
		class="dk.in2isoft.onlineobjects.apps.account.views.AccountInvitationView"
		scope="request">
		<property name="modelService" ref="modelService" />
		<property name="invitationService" ref="invitationService" />
		<property name="securityService" ref="securityService" />
	</bean>


</beans>